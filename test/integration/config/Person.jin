[People]
convention = Flourish
collection = people
model      = Person
ordering   = {
	"lastName"  : "asc",
	"firstName" : "asc"
}

[Person]
identity   = id
uniqueOn   = [
	["team", "teamRank"]
]

	[Person.fields.id]
	type	  = integer
	mapping	  = id
	generator = native

	[Person.fields.firstName]
	type	 = string
	mapping  = first_name
	nullable = FALSE

	[Person.fields.lastName]
	type	 = string
	mapping  = last_name
	nullable = TRUE

	; Example of one-to-many

	[Person.fields.emailAddresses]
	target = EmailAddress
	type   = hasMany
	unique = TRUE
	order  = {
		"priority" : "asc"
	}
	route  = {
		"id" : "person"
	}

	; Example of many-to-one

	[Person.fields.team]
	target  = Team
	type    = hasOne
	mapping = team
	default = {
		"name ==": "Interns"
	}
	route   = {
		"team" : "id"
	}

	[Person.fields.teamRank]
	type    = integer
	mapping = team_rank
	default = NULL

	; Example of one-to-one

	[Person.fields.user]
	target = User
	type   = hasOne
	unique = TRUE
	route  = {
		"id" : "person"
	}

	[Person.fields.authLevel]
	type    = string
	target  = User
	mapping = authLevel


	; Example of many-to-many

	[Person.fields.groups]
	target  = Group
	type    = hasMany
	default = {
		"default ==": TRUE
	}
	route   = {
		"user_groups" : {
			"id"    : "user",
			"group" : "id"
		}
	}
