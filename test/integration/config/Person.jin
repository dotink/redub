[People]
mapTo     = people
model     = Person
identity  = id
uniqueOn  = [
	["team", "teamRank"],
	["email"]
]
order  = {
	"lastName"  : "asc",
	"firstName" : "asc"
}

	[People.fields.id]
	type      = integer
	generator = native
	mapTo     = id

	[People.fields.firstName]
	type     = string
	nullable = FALSE
	mapTo    = first_name

	[People.fields.lastName]
	type     = string
	nullable = TRUE
	mapTo    = last_name

	[People.fields.email]
	type     = string
	nullable = FALSE
	mapTo    = email

	[People.fields.teamRank]
	type    = integer
	default = NULL
	mapTo   = team_rank

	; Example of many-to-one

	[People.fields.team]
	type     = hasOne
	target   = Teams
	nullable = FALSE
	default  = {
		"name ==" : "Interns"
	}
	route    = {
		"teams" : { "team" : "id" }
	}

	; Example of one-to-many

	[People.fields.phoneNumbers]
	type   = hasMany
	target = PhoneNumbers
	unique = TRUE
	order  = {
		"priority" : "asc"
	}
	route  = {
		"phone_numbers" : { "id" : "person" }
	}

	; Example of one-to-one

	[People.fields.user]
	type   = hasOne
	target = Users
	unique = TRUE
	route  = {
		"users" : { "id" : "person" }
	}

	; Example of many-to-many

	[People.fields.groups]
	type    = hasMany
	target  = Groups
	default = {
		"isDefault ==": TRUE
	}
	route   = {
		"people_groups" : { "id"    : "person" },
		"groups"        : { "group" : "id"}
	}
